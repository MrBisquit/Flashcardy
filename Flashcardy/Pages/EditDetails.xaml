<Page x:Class="Flashcardy.Pages.EditDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Flashcardy.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditDetails">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentPresenter Grid.RowSpan="2" Name="DialogPresenter" Panel.ZIndex="1" />

        <Border BorderThickness="0, 0, 0, 1" BorderBrush="#A2A2A2" Panel.ZIndex="0">
            <Grid Margin="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="25" FontWeight="SemiBold">
                    <Italic>
                        Flashcardy
                    </Italic>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button Appearance="Secondary"
                        Name="BackBtn" Click="BackBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowLeft12" VerticalAlignment="Center"
                                Margin="0, 2, 0, 0" />

                            <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                            Back
                            </TextBlock>
                        </StackPanel>
                    </ui:Button>

                    <Separator Width="5" Height="0" />

                    <ui:Button Appearance="Primary"
                        Name="SaveBtn" Click="SaveBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save16" VerticalAlignment="Center"
                                Margin="0, 2, 0, 0" />

                            <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                            Save
                            </TextBlock>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Name="Details">
            <StackPanel Margin="5">
                <StackPanel>
                    <Label>Set name:</Label>
                    <ui:TextBox Name="NameTB" TextChanged="NameTB_TextChanged" />
                </StackPanel>

                <Separator Height="5" />

                <StackPanel>
                    <Label>Set description (Short description):</Label>
                    <ui:TextBox Name="DescTB" TextChanged="DescTB_TextChanged" />
                </StackPanel>

                <Separator Height="5" />

                <StackPanel>
                    <Label>Set identifier (E.g. a unit code):</Label>
                    <ui:TextBox Name="IDTB" TextChanged="IDTB_TextChanged" />
                </StackPanel>

                <Separator Height="5" />

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>Linked identifiers:</Label>
                        <ui:ToggleSwitch Margin="10, 0, 0, 0"
                                         Name="LinkedIDs" Click="LinkedIDs_Click"
                                         IsChecked="{x:Null}" />
                    </StackPanel>
                    <ui:TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                        If enabled, every card will have the above identifier.
                        If not, they can each have their own identifier.
                    </ui:TextBlock>
                </StackPanel>

                <Separator Height="5" Width="0" />
                <Separator Height="1" Background="Black" />
                <Separator Height="5" Width="0" />

                <TextBlock>Dangerous actions:</TextBlock>
                <Separator Height="5" />
                <ui:Button Appearance="Danger" HorizontalAlignment="Stretch"
                    Name="DeleteBtn" Click="DeleteBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Delete12" VerticalAlignment="Center"
                            Margin="0, 2, 0, 0" />

                        <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                            Delete set
                        </TextBlock>
                    </StackPanel>
                </ui:Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
