<Page x:Class="Flashcardy.Pages.SetEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Flashcardy.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SetEdit">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentPresenter Grid.RowSpan="2" Name="DialogPresenter" Panel.ZIndex="1" />

        <Border BorderThickness="0, 0, 0, 1" BorderBrush="#A2A2A2" Panel.ZIndex="0">
            <Grid Margin="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="25" FontWeight="SemiBold">
                        <Italic>
                            Flashcardy
                        </Italic>
                    </TextBlock>

                    <Separator Width="15" Height="0" />

                    <ui:Button Appearance="Secondary"
                        Name="EditBtn" Click="EditBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="DocumentEdit16" VerticalAlignment="Center"
                                Margin="0, 2, 0, 0" />

                            <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                                Edit details
                            </TextBlock>
                        </StackPanel>
                    </ui:Button>

                    <Separator Width="5" Height="0" />

                    <ui:Button Appearance="Secondary"
                        Name="ExportBtn" Click="ExportBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Print16" VerticalAlignment="Center"
                                Margin="0, 2, 0, 0" />

                            <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                                Export
                            </TextBlock>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:TextBox Width="250"
                                PlaceholderEnabled="True"
                                PlaceholderText="Set Name (Don't leave this blank!)"
                                Name="NameTextBox"
                                TextChanged="NameTextBox_TextChanged"
                                />

                    <Separator Width="5" Height="0" />
                    
                    <ui:Button Appearance="Secondary"
                        Name="BackBtn" Click="BackBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowLeft12" VerticalAlignment="Center"
                            Margin="0, 2, 0, 0" />

                            <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                                Back
                            </TextBlock>
                        </StackPanel>
                    </ui:Button>

                    <Separator Width="5" Height="0" />

                    <ui:Button Appearance="Primary"
                        Name="SaveBtn" Click="SaveBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save16" VerticalAlignment="Center"
                            Margin="0, 2, 0, 0" />

                            <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                                Save
                            </TextBlock>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock FontSize="20" FontWeight="SemiBold" Margin="10, 0, 0, 0">
                <Italic>
                    Cards in this set
                </Italic>
            </TextBlock>

            <ui:Button Appearance="Primary"
                Name="NewBtn" Click="NewBtn_Click"
                HorizontalAlignment="Right" Margin="0, 0, 10, 0">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Add12" VerticalAlignment="Center"
                        Margin="0, 2, 0, 0" />

                    <TextBlock Margin="5, 0, 0, 0" VerticalAlignment="Center">
                        New card
                    </TextBlock>
                </StackPanel>
            </ui:Button>

            <ui:DynamicScrollViewer Grid.Row="1">
                <ui:WrapPanel Name="Cards" Margin="5"></ui:WrapPanel>
            </ui:DynamicScrollViewer>
        </Grid>
    </Grid>
</Page>
